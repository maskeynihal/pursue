{
  "name": "@maskeynihal/pursue",
  "version": "1.0.2",
  "description": "Handling jobs and queue",
  "main": "./dist/index.js",
  "author": "maskeynihal",
  "scripts": {
    "clean:build": "rimraf dist",
    "build": "yarn clean:build && tsc",
    "build:watch": "yarn clean:build && tsc -w",
    "lint": "eslint '*/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint --fix '*/**/*.{js,ts,tsx}'",
    "prettier": "prettier -c src/**/*.{js,ts,tsx,scss,css,md}",
    "prettier:fix": "prettier -c src/**/*.{js,ts,tsx,scss,css,md} --write",
    "prepare": "husky install",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.592.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.15",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "src/**/*.{json,scss,css,md}": [
      "yarn prettier:fix"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn prettier:fix",
      "yarn lint:fix"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
